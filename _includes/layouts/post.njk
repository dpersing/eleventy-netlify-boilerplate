---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ displaytitle }}</h1>
  <p>
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time>
    </small>
  </p>

  <nav aria-label="Table of contents">
  {{content | toc | safe }}
  </nav>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav aria-label="Blog">
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
